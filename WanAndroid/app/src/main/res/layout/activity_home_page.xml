<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitise.main.HomePageActivity">

    <FrameLayout
        android:id="@+id/home_page_v"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.5" />

    <LinearLayout
        android:background="@color/tab_background"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginTop="1.6dp"
                android:background="@color/tab_background"
                android:src="@mipmap/homepage1"
                android:id="@+id/home_home"
                android:layout_weight="3.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/home_bt"
                android:textSize="11sp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="@string/navigation_1"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginTop="1.8dp"
                android:background="@color/tab_background"
                android:src="@mipmap/system"
                android:id="@+id/knowledge_hierarchy"
                android:layout_weight="3.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/system_bt"
                android:textSize="11sp"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="@string/navigation_2"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginTop="1.8dp"
                android:background="@color/tab_background"
                android:src="@mipmap/square2"
                android:id="@+id/public_square"
                android:layout_weight="3.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/place_bt"
                android:layout_marginBottom="2dp"
                android:text="@string/navigation_3"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginTop="1.8dp"
                android:background="@color/tab_background"
                android:src="@mipmap/myself2"
                android:id="@+id/myself_space"
                android:layout_weight="3.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/my_bt"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:textSize="11sp"
                android:text="@string/navigation_4"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>